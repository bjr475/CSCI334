<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<ScrollPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
            fx:controller="com.app.main.controller.employee.SettingsViewController"
            styleClass="default-background" VBox.vgrow="ALWAYS" fitToWidth="true" fitToHeight="true">
    <padding>
        <Insets>
            <top>24</top>
            <bottom>24</bottom>
            <left>24</left>
            <right>24</right>
        </Insets>
    </padding>
    <HBox spacing="24" styleClass="default-background">
        <VBox spacing="8">
            <Label>First Name:</Label>
            <TextField fx:id="first_name"/>

            <Label>Last Name:</Label>
            <TextField fx:id="last_name"/>

            <Label>Display Name:</Label>
            <TextField fx:id="display_name"/>

            <Label>Email:</Label>
            <TextField fx:id="email"/>

            <JFXButton styleClass="action-button" onAction="#confirmChanges">Confirm Changes</JFXButton>
        </VBox>

        <VBox spacing="8">
            <Label>New Password</Label>
            <PasswordField fx:id="newPassword"/>
            <Label>Repeat new password</Label>
            <PasswordField fx:id="repeatNewPassword"/>

            <JFXButton styleClass="action-button" onAction="#updatePassword">Update Password</JFXButton>
        </VBox>
    </HBox>
</ScrollPane>
