<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import java.lang.Integer?>
<?import java.lang.String?>
<StackPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
           fx:controller="com.app.main.controller.employee.SalesViewController">
    <JFXDrawer fx:id="toolDrawer" direction="RIGHT" VBox.vgrow="ALWAYS">
        <sidePane>
            <StackPane>
                <ScrollPane fx:id="addMenu" styleClass="default-background" HBox.hgrow="ALWAYS" fitToWidth="true">
                    <padding>
                        <Insets>
                            <top>8</top>
                            <bottom>8</bottom>
                            <left>8</left>
                            <right>8</right>
                        </Insets>
                    </padding>
                    <StackPane>
                        <GridPane VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" vgap="8" hgap="8"
                                  fx:id="saleConfirmGrid" styleClass="default-background" minWidth="540">
                            <Text GridPane.hgrow="ALWAYS" GridPane.columnIndex="0"
                                  GridPane.rowIndex="0" GridPane.columnSpan="3">
                                Confirm Sale
                            </Text>
                            <TitledPane GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="0"
                                        GridPane.columnSpan="3" text="Item List">
                                <TableView fx:id="confirmItemTable">
                                    <columns>
                                        <TableColumn prefWidth="200" text="Item No."/>
                                        <TableColumn prefWidth="200" text="Item Name"/>
                                        <TableColumn prefWidth="100" text="Quantity"/>
                                    </columns>
                                </TableView>
                            </TitledPane>
                            <VBox spacing="20" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.columnIndex="0"
                                  GridPane.columnSpan="3">
                                <CheckBox fx:id="otherDiscount" text="Other Discount"/>
                                <TextField fx:id="otherDiscountAmount"/>
                            </VBox>

                            <VBox spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="10">
                                <Text textAlignment="left">Subtotal</Text>
                                <Text textAlignment="left">Discount</Text>
                                <Text textAlignment="left">GST</Text>
                                <Text textAlignment="left">Total</Text>
                            </VBox>

                            <VBox spacing="20" GridPane.columnIndex="3" GridPane.rowIndex="10">
                                <Text fx:id="subtotal" textAlignment="right">$0.00</Text>
                                <Text fx:id="discount" textAlignment="right">-$0.00</Text>
                                <Text fx:id="GST" textAlignment="right">-$0.00</Text>
                                <Text fx:id="total" textAlignment="right">$0.00</Text>
                            </VBox>

                            <HBox spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="13"
                                  GridPane.columnSpan="5" alignment="center_right">
                                <JFXButton styleClass="secondary-button" onMouseClicked="#onConfirmBack">
                                    Back
                                </JFXButton>
                                <JFXButton styleClass="action-button" onAction="#onConfirmAdd">
                                    Confirm
                                </JFXButton>
                            </HBox>
                        </GridPane>

                        <GridPane VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" vgap="8" hgap="8"
                                  fx:id="saleCustomerGrid" styleClass="default-background">
                            <Text GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.columnIndex="0"
                                  GridPane.columnSpan="2">
                                Add Customer
                            </Text>

                            <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="0"
                                  GridPane.columnSpan="2">
                                <Label>Email</Label>
                                <TextField fx:id="addEmail"/>
                            </VBox>
                            <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="2"
                                  GridPane.columnSpan="2">
                                <Label>Customer ID</Label>
                                <TextField editable="false" fx:id="addCustomerID"/>
                            </VBox>
                            <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.columnIndex="0"
                                  GridPane.columnSpan="2">
                                <Label>First Name</Label>
                                <TextField fx:id="addFirstName"/>
                            </VBox>
                            <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.columnIndex="2"
                                  GridPane.columnSpan="2">
                                <Label>Last Name</Label>
                                <TextField fx:id="addLastName"/>
                            </VBox>
                            <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.columnIndex="0"
                                  GridPane.columnSpan="4" GridPane.rowSpan="2">
                                <fx:include fx:id="addAddress" source="address.fxml"/>
                            </VBox>
                            <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" GridPane.columnIndex="0"
                                  GridPane.columnSpan="2">
                                <CheckBox fx:id="addExistingCredit" text="Existing Credit Line"/>
                            </VBox>
                            <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" GridPane.columnIndex="2"
                                  GridPane.columnSpan="2">
                                <CheckBox fx:id="clubMember" text="Club Member"/>
                            </VBox>

                            <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="6" GridPane.columnIndex="0"
                                  GridPane.columnSpan="2">
                                <Label>Credit</Label>
                                <TextField fx:id="addCredit"/>
                            </VBox>

                            <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="6" GridPane.columnIndex="2"
                                  GridPane.columnSpan="2">
                                <Label>Starting Date</Label>
                                <DatePicker fx:id="addClubStartDate" GridPane.hgrow="ALWAYS"/>
                            </VBox>

                            <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="7" GridPane.columnIndex="0"
                                  GridPane.columnSpan="2">
                                <Label>Interests</Label>
                            </VBox>
                            <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="8" GridPane.columnIndex="0"
                                  GridPane.columnSpan="2">
                                <Label>Subjects</Label>
                                <ListView fx:id="addSubjects" maxHeight="150">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Train"/>
                                            <String fx:value="Boat"/>
                                            <String fx:value="Car"/>
                                            <String fx:value="Airplane"/>
                                            <String fx:value="Other"/>
                                        </FXCollections>
                                    </items>
                                </ListView>
                            </VBox>

                            <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="8" GridPane.columnIndex="2"
                                  GridPane.columnSpan="2">
                                <Label>Model Types</Label>
                                <ListView fx:id="addTypes" maxHeight="150">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Display"/>
                                            <String fx:value="Working"/>
                                            <String fx:value="Static"/>
                                        </FXCollections>
                                    </items>
                                </ListView>
                            </VBox>

                            <HBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="10" GridPane.columnIndex="0"
                                  GridPane.columnSpan="4">
                                <Pane HBox.hgrow="ALWAYS"/>
                                <JFXButton styleClass="secondary-button" onMouseClicked="#onCustomerBack">
                                    Back
                                </JFXButton>
                                <JFXButton styleClass="action-button" onMouseClicked="#onCustomerNext">
                                    Next
                                </JFXButton>
                            </HBox>
                        </GridPane>

                        <GridPane VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" vgap="8" hgap="8"
                                  fx:id="saleItemGrid" styleClass="default-background">
                            <Text GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.columnIndex="0">
                                Add a Sale
                            </Text>
                            <TitledPane GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="0"
                                        text="Item List">
                                <TableView fx:id="itemTable">
                                    <columns>
                                        <TableColumn prefWidth="200" text="Item No."/>
                                        <TableColumn prefWidth="200" text="Item Name"/>
                                        <TableColumn prefWidth="100" text="Quantity"/>
                                    </columns>
                                </TableView>
                            </TitledPane>
                            <HBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.columnIndex="0">
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label>Item ID</Label>
                                    <ComboBox editable="true" fx:id="itemIDView"/>
                                </VBox>
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label>Quantity</Label>
                                    <Spinner fx:id="quantityView">
                                        <valueFactory>
                                            <SpinnerValueFactory.IntegerSpinnerValueFactory>
                                                <min>1</min>
                                                <max>
                                                    <Integer fx:constant="MAX_VALUE"/>
                                                </max>
                                            </SpinnerValueFactory.IntegerSpinnerValueFactory>
                                        </valueFactory>
                                    </Spinner>
                                </VBox>
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label>Discount</Label>
                                    <Spinner fx:id="discountSpinner">
                                        <valueFactory>
                                            <SpinnerValueFactory.DoubleSpinnerValueFactory>
                                                <min>0.0</min>
                                                <max>100.0</max>
                                                <amountToStepBy>1.0</amountToStepBy>
                                            </SpinnerValueFactory.DoubleSpinnerValueFactory>
                                        </valueFactory>
                                    </Spinner>
                                </VBox>
                                <VBox>
                                    <Label/>
                                    <JFXButton fx:id="addItemButton" buttonType="FLAT">
                                        <graphic>
                                            <FontIcon iconLiteral="fa-plus" iconSize="20"/>
                                        </graphic>
                                    </JFXButton>
                                </VBox>
                            </HBox>
                            <Label GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.columnIndex="0">
                                Customer Search
                            </Label>
                            <HBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" GridPane.columnIndex="0" spacing="20">
                                <TextField fx:id="customerID" promptText="Search by ID or display"/>
                                <ToggleButton fx:id="newCustomer">
                                    New Customer
                                </ToggleButton>
                            </HBox>
                            <HBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" GridPane.columnIndex="0" spacing="20">
                                <Pane HBox.hgrow="ALWAYS"/>
                                <JFXButton onAction="#onCancelAdd" styleClass="secondary-button">
                                    Cancel
                                </JFXButton>
                                <JFXButton onAction="#onSaleNext" styleClass="action-button">
                                    Next
                                </JFXButton>
                            </HBox>
                        </GridPane>
                    </StackPane>
                </ScrollPane>

                <ScrollPane styleClass="default-background" fx:id="editMenu" minWidth="540">
                    <GridPane alignment="baseline_center" hgap="25" vgap="5">
                        <padding>
                            <Insets>
                                <left>20</left>
                                <bottom>20</bottom>
                                <right>20</right>
                                <top>20</top>
                            </Insets>
                        </padding>
                        <Text GridPane.rowIndex="0">
                            Edit Sale
                        </Text>

                        <TitledPane GridPane.rowIndex="1" GridPane.columnSpan="5"
                                    text="Item List">
                            <TableView fx:id="editItemTable">
                                <columns>
                                    <TableColumn prefWidth="200" text="Item No.">
                                    </TableColumn>
                                    <TableColumn prefWidth="200" text="Item Name">
                                    </TableColumn>
                                    <TableColumn prefWidth="100" text="Quantity">
                                    </TableColumn>
                                </columns>
                            </TableView>
                            <HBox>
                                <Pane HBox.hgrow="ALWAYS"/>
                                <JFXButton styleClass="action-button">
                                    Edit Sale Items
                                </JFXButton>
                            </HBox>
                        </TitledPane>

                        <VBox HBox.hgrow="ALWAYS" spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="2"
                              GridPane.columnSpan="5">
                            <Label>Customer ID</Label>
                            <TextField fx:id="editCustomerID"/>
                        </VBox>

                        <VBox HBox.hgrow="ALWAYS" spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="3">
                            <CheckBox fx:id="viewOtherDiscount" text="Other Discount"/>
                            <TextField fx:id="viewOtherDiscountAmount"/>
                        </VBox>


                        <VBox HBox.hgrow="ALWAYS" spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="4">
                            <Text textAlignment="left">Subtotal</Text>
                            <Text textAlignment="left">Discount</Text>
                            <Text textAlignment="left">GST</Text>
                            <Text textAlignment="left">Total</Text>
                        </VBox>

                        <VBox HBox.hgrow="ALWAYS" spacing="20" GridPane.columnIndex="3" GridPane.rowIndex="4"
                              GridPane.columnSpan="2">
                            <Text fx:id="viewSubtotal" textAlignment="right">$0.00</Text>
                            <Text fx:id="viewDiscount" textAlignment="right">-$0.00</Text>
                            <Text fx:id="viewGST" textAlignment="right">-$0.00</Text>
                            <Text fx:id="viewTotal" textAlignment="right">$0.00</Text>
                        </VBox>

                        <HBox HBox.hgrow="ALWAYS" spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="6"
                              GridPane.columnSpan="5" alignment="center_right">
                            <JFXButton styleClass="secondary-button" onAction="#onCancelEdit">
                                Cancel
                            </JFXButton>
                            <JFXButton styleClass="action-button" onAction="#onEdit">
                                Edit
                            </JFXButton>
                        </HBox>
                    </GridPane>
                </ScrollPane>

                <ScrollPane styleClass="default-background" fx:id="searchMenu">
                    <VBox spacing="20">
                        <padding>
                            <Insets>
                                <left>20</left>
                                <bottom>20</bottom>
                                <right>20</right>
                                <top>20</top>
                            </Insets>
                        </padding>

                        <VBox HBox.hgrow="ALWAYS">
                            <Label>Keywords</Label>
                            <TextField fx:id="search"/>
                        </VBox>

                        <HBox spacing="16">
                            <VBox spacing="8">
                                <JFXCheckBox fx:id="allSearch" text="All"/>
                            </VBox>
                            <VBox spacing="8">
                                <JFXCheckBox fx:id="stockSearch" text="Stock"/>
                                <JFXCheckBox fx:id="customersSearch" text="Customers"/>
                            </VBox>
                            <VBox spacing="8">
                                <JFXCheckBox fx:id="salesSearch" text="Sales"/>
                                <JFXCheckBox fx:id="suppliersSearch" text="Suppliers"/>
                            </VBox>
                        </HBox>
                        <TitledPane fx:id="filter" text="Filter">
                            <content>

                            </content>
                        </TitledPane>
                        <HBox>
                            <Pane HBox.hgrow="ALWAYS"/>
                            <JFXButton>
                                Search
                            </JFXButton>
                        </HBox>
                    </VBox>
                </ScrollPane>

            </StackPane>
        </sidePane>
        <content>
            <ScrollPane styleClass="default-background" VBox.vgrow="ALWAYS" fitToWidth="true" fitToHeight="true">
                <TableView fx:id="tableView" styleClass="table-view">
                    <columns>
                        <TableColumn prefWidth="200" text="Sale No."/>
                        <TableColumn prefWidth="200" text="Customer No."/>
                        <TableColumn prefWidth="200" text="Club Member"/>
                        <TableColumn prefWidth="200" text="Discount"/>
                        <TableColumn prefWidth="200" text="Total"/>
                    </columns>
                </TableView>
            </ScrollPane>
        </content>
    </JFXDrawer>
</StackPane>