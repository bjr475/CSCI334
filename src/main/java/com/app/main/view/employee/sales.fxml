<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<StackPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
           fx:controller="com.app.main.controller.employee.SalesViewController">
    <JFXDrawer fx:id="toolDrawer" direction="RIGHT" VBox.vgrow="ALWAYS">
        <sidePane>
            <StackPane>
                <ScrollPane styleClass="default-background" fx:id="searchMenu">
                    <VBox spacing="20">
                        <padding>
                            <Insets>
                                <left>20</left>
                                <bottom>20</bottom>
                                <right>20</right>
                                <top>20</top>
                            </Insets>
                        </padding>

                        <VBox HBox.hgrow="ALWAYS">
                            <Label>Keywords</Label>
                            <TextField fx:id="search"/>
                        </VBox>

                        <HBox spacing="16">
                            <VBox spacing="8">
                                <JFXCheckBox fx:id="allSearch" text="All"/>
                            </VBox>
                            <VBox spacing="8">
                                <JFXCheckBox fx:id="stockSearch" text="Stock"/>
                                <JFXCheckBox fx:id="customersSearch" text="Customers"/>
                            </VBox>
                            <VBox spacing="8">
                                <JFXCheckBox fx:id="salesSearch" text="Sales"/>
                                <JFXCheckBox fx:id="suppliersSearch" text="Suppliers"/>
                            </VBox>
                        </HBox>
                        <TitledPane fx:id="filter" text="Filter">
                            <content>

                            </content>
                        </TitledPane>
                        <HBox>
                            <Pane HBox.hgrow="ALWAYS"/>
                            <JFXButton>
                                Search
                            </JFXButton>
                        </HBox>
                    </VBox>
                </ScrollPane>
                <ScrollPane styleClass="default-background" fx:id="addMenu">
                    <GridPane alignment="baseline_center" hgap="25" vgap="5">
                        <padding>
                            <Insets>
                                <left>20</left>
                                <bottom>20</bottom>
                                <right>20</right>
                                <top>20</top>
                            </Insets>
                        </padding>
                        <Text>Add a Sale</Text>

                        <Label GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="4">Customer
                            ID
                        </Label>
                        <TextField fx:id="customerID" GridPane.columnIndex="0" GridPane.rowIndex="2"
                                   GridPane.columnSpan="5"/>

                        <HBox spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="3">
                            <CheckBox fx:id="newCustomer"/>
                            <Label>New Customer</Label>
                        </HBox>

                        <HBox spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="3">

                        </HBox>

                        <Label GridPane.columnIndex="0" GridPane.rowIndex="4">Item List</Label>
                        <TableView fx:id="itemTable" GridPane.rowIndex="5" GridPane.columnSpan="5"
                                   prefHeight="200" prefWidth="550">
                            <columns>
                                <TableColumn prefWidth="200" text="Item No.">
                                </TableColumn>
                                <TableColumn prefWidth="200" text="Item Name">
                                </TableColumn>
                                <TableColumn prefWidth="100" text="Quantity">
                                </TableColumn>
                            </columns>
                        </TableView>

                        <Label GridPane.columnIndex="0" GridPane.rowIndex="6">Item ID</Label>
                        <TextField fx:id="itemIDView" GridPane.columnIndex="0" GridPane.rowIndex="7"
                                   GridPane.columnSpan="2"/>
                        <Label GridPane.columnIndex="2" GridPane.rowIndex="6">Quantity</Label>
                        <TextField fx:id="quantityView" GridPane.columnIndex="2" GridPane.rowIndex="7"
                                   GridPane.columnSpan="1"/>
                        <JFXButton fx:id="addItemButton" buttonType="FLAT"
                                   GridPane.columnIndex="3" GridPane.rowIndex="7">
                            <graphic>
                                <FontIcon iconLiteral="fa-plus" iconSize="20"/>
                            </graphic>
                        </JFXButton>
                        <HBox spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="8">
                            <CheckBox fx:id="otherDiscount"/>
                            <Label>Other Discount</Label>

                            <CheckBox fx:id="clubMember"/>
                            <Label>Club Member</Label>
                        </HBox>
                        <!--<CheckBox fx:id="otherDiscount" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
                        <Label GridPane.columnIndex="1" GridPane.rowIndex="8">Other Discount</Label>

                        <CheckBox fx:id="clubMember" GridPane.columnIndex="2" GridPane.rowIndex="8"/>
                        <Label GridPane.columnIndex="3" GridPane.rowIndex="8">Club Member</Label>-->
                        <VBox spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="10">

                            <Text textAlignment="left">Subtotal</Text>
                            <Text textAlignment="left">Discount</Text>
                            <Text textAlignment="left">GST</Text>
                            <Text textAlignment="left">Total</Text>
                        </VBox>
                        <VBox spacing="20" GridPane.columnIndex="3" GridPane.rowIndex="10">
                            <Text fx:id="subtotal" textAlignment="right">$0.00</Text>
                            <Text fx:id="discount" textAlignment="right">-$0.00</Text>
                            <Text fx:id="GST" textAlignment="right">-$0.00</Text>
                            <Text fx:id="total" textAlignment="right">$0.00</Text>
                        </VBox>
                        <HBox spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="12"
                              GridPane.columnSpan="5" alignment="center_right">
                            <JFXButton>
                                Cancel
                            </JFXButton>
                            <JFXButton>
                                Save
                            </JFXButton>
                        </HBox>

                    </GridPane>
                </ScrollPane>
                <ScrollPane styleClass="default-background" fx:id="editMenu">
                    <GridPane alignment="baseline_center" hgap="25" vgap="5">
                        <padding>
                            <Insets>
                                <left>20</left>
                                <bottom>20</bottom>
                                <right>20</right>
                                <top>20</top>
                            </Insets>
                        </padding>
                        <Text>Add a Sale</Text>

                        <Label GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="4">Customer
                            ID
                        </Label>
                        <Text fx:id="customerIDView" GridPane.columnIndex="0" GridPane.rowIndex="2"
                              GridPane.columnSpan="5">c3948734
                        </Text>

                        <HBox spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="3">

                        </HBox>

                        <TitledPane text="Item List" expanded="false"
                                    GridPane.rowIndex="5" GridPane.columnSpan="5">
                            <content>
                                <TableView fx:id="itemTableView" prefWidth="550">
                                    <columns>
                                        <TableColumn prefWidth="200" text="Item No."/>
                                        <TableColumn prefWidth="200" text="Item Name"/>
                                        <TableColumn prefWidth="100" text="Quantity"/>
                                    </columns>
                                </TableView>
                            </content>
                        </TitledPane>
                        <HBox spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="8">
                            <Label>Other Discount</Label>
                            <Text fx:id="otherDiscountView">No</Text>

                            <Label>Club Member</Label>
                            <Text fx:id="clubMemberView">No</Text>
                        </HBox>

                        <VBox spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="10">

                            <Text textAlignment="left">Subtotal</Text>
                            <Text textAlignment="left">Discount</Text>
                            <Text textAlignment="left">GST</Text>
                            <Text textAlignment="left">Total</Text>
                        </VBox>
                        <VBox spacing="20" GridPane.columnIndex="3" GridPane.rowIndex="10">
                            <Text fx:id="subtotalView" textAlignment="right">$0.00</Text>
                            <Text fx:id="discountView" textAlignment="right">-$0.00</Text>
                            <Text fx:id="GSTView" textAlignment="right">-$0.00</Text>
                            <Text fx:id="totalView" textAlignment="right">$0.00</Text>
                        </VBox>
                        <HBox spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="12"
                              GridPane.columnSpan="5" alignment="center_right">
                            <JFXButton>
                                Close
                            </JFXButton>
                            <JFXButton onAction="#onEdit">
                                Edit
                            </JFXButton>
                        </HBox>
                    </GridPane>
                </ScrollPane>
            </StackPane>
        </sidePane>
        <content>
            <ScrollPane styleClass="default-background" VBox.vgrow="ALWAYS" fitToWidth="true" fitToHeight="true">
                <TableView fx:id="tableView" styleClass="table-view">
                    <columns>
                        <TableColumn prefWidth="200" text="Sale No."/>
                        <TableColumn prefWidth="200" text="Customer No."/>
                        <TableColumn prefWidth="200" text="Club Member"/>
                        <TableColumn prefWidth="200" text="Discount"/>
                        <TableColumn prefWidth="200" text="Total"/>
                    </columns>
                </TableView>
            </ScrollPane>
        </content>
    </JFXDrawer>
</StackPane>