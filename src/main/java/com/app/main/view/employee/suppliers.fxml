<?xml version="1.0" encoding="UTF-8"?>
<?language javascript?>

<?import com.jfoenix.controls.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import java.lang.*?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:id="parentSuppliersPane" xmlns="http://javafx.com/javafx"
           fx:controller="com.app.main.controller.employee.SuppliersViewController">
    <JFXDrawer fx:id="toolDrawer" direction="RIGHT" VBox.vgrow="ALWAYS">
        <sidePane>
            <StackPane>

                <ScrollPane styleClass="default-background" fx:id="addMenu">
                    <padding>
                        <Insets>
                            <left>20</left>
                            <bottom>20</bottom>
                            <right>20</right>
                            <top>20</top>
                        </Insets>
                    </padding>
                    <GridPane alignment="baseline_center" hgap="25" vgap="25" minWidth="540">

                        <Label GridPane.rowIndex="0" GridPane.columnIndex="0">Add Supplier</Label>

                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="0">
                            <Label>Supplier Name</Label>
                            <TextField fx:id="addSupplierName"></TextField>
                        </VBox>
                        <VBox  GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="2">
                            <Label>Supplier ID</Label>
                            <TextField fx:id="addSupplierID" editable="false"></TextField>
                        </VBox>

                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.columnIndex="0"
                              GridPane.columnSpan="4">
                            <fx:include fx:id="addAddress" source="address.fxml"/>
                        </VBox>

                        <TitledPane text="Contacts" GridPane.hgrow="ALWAYS"
                                    GridPane.rowIndex="3" GridPane.columnIndex="0"
                                    GridPane.columnSpan="4">
                            <content>
                                <TableView fx:id="contactTable">
                                    <columns>
                                        <TableColumn prefWidth="150" text="Contact Name">
                                        </TableColumn>
                                        <TableColumn prefWidth="150" text="Phone">
                                        </TableColumn>
                                        <TableColumn prefWidth="150" text="Email">
                                        </TableColumn>
                                    </columns>
                                </TableView>
                                <HBox>
                                    <Pane HBox.hgrow="ALWAYS"/>
                                    <JFXButton styleClass="sml-button"
                                               onAction="addContactDialog.show(parentSuppliersPane)">
                                        Add Contact
                                    </JFXButton>
                                </HBox>
                            </content>
                        </TitledPane>

                        <TitledPane text="Items" GridPane.hgrow="ALWAYS"
                                    GridPane.rowIndex="4" GridPane.columnIndex="0"
                                    GridPane.columnSpan="4">
                            <content>
                                <TableView>
                                    <columns>
                                        <TableColumn text="Item No.">
                                        </TableColumn>
                                        <TableColumn text="Item Name">
                                        </TableColumn>
                                        <TableColumn text="Price">
                                        </TableColumn>
                                    </columns>
                                </TableView>
                            </content>
                        </TitledPane>

                        <HBox spacing="20" GridPane.hgrow="ALWAYS"
                              GridPane.rowIndex="5" GridPane.columnIndex="0"
                              GridPane.columnSpan="4">
                            <VBox HBox.hgrow="ALWAYS">
                                <TextField fx:id="itemSearch" promptText="Item Search"/>
                            </VBox>
                            <JFXButton styleClass="sml-button"
                                       onAction="addItemDialog.show(parentSuppliersPane)">
                                New Item
                            </JFXButton>
                            <VBox HBox.hgrow="ALWAYS">
                                <JFXButton fx:id="addSupplierItemButton" buttonType="FLAT"
                                           alignment="BOTTOM_RIGHT">
                                    <graphic>
                                        <FontIcon iconLiteral="fa-plus" iconSize="20"/>
                                    </graphic>
                                </JFXButton>
                            </VBox>
                        </HBox>

                        <VBox spacing="8" GridPane.hgrow="ALWAYS"
                              GridPane.rowIndex="6" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            <JFXCheckBox fx:id="existingCreditLine">
                                Existing Credit Line
                            </JFXCheckBox>
                            <Label>Credit:</Label>
                            <TextField fx:id="addCredit"/>
                        </VBox>

                        <HBox spacing="20"  GridPane.hgrow="ALWAYS"
                              GridPane.rowIndex="7" GridPane.columnIndex="0"
                              GridPane.columnSpan="4">
                            <Pane HBox.hgrow="ALWAYS"/>
                            <JFXButton styleClass="secondary-button" onAction="#onCancelAdd">
                                Cancel
                            </JFXButton>
                            <JFXButton styleClass="action-button" onAction="#onConfirmAdd">
                                Save
                            </JFXButton>
                        </HBox>
                    </GridPane>
                </ScrollPane>

                <ScrollPane styleClass="default-background" fx:id="editMenu">
                    <padding>
                        <Insets>
                            <left>20</left>
                            <bottom>20</bottom>
                            <right>20</right>
                            <top>20</top>
                        </Insets>
                    </padding>
                    <GridPane alignment="baseline_center" hgap="25" vgap="25" minWidth="540">

                        <Label GridPane.rowIndex="0" GridPane.columnIndex="0">
                            Edit Supplier
                        </Label>

                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="0">
                            <Label>Supplier Name</Label>
                            <TextField fx:id="editSupplierName"></TextField>
                        </VBox>
                        <VBox  GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="2">
                            <Label>Supplier ID</Label>
                            <TextField fx:id="editSupplierID" editable="false"></TextField>
                        </VBox>

                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.columnIndex="0"
                              GridPane.columnSpan="4">
                            <fx:include fx:id="editAddress" source="address.fxml"/>
                        </VBox>

                        <TitledPane text="Contacts" GridPane.hgrow="ALWAYS"
                                    GridPane.rowIndex="3" GridPane.columnIndex="0"
                                    GridPane.columnSpan="4">
                            <content>
                                <TableView fx:id="editContactTable">
                                    <columns>
                                        <TableColumn prefWidth="150" text="Contact Name">
                                        </TableColumn>
                                        <TableColumn prefWidth="150" text="Phone">
                                        </TableColumn>
                                        <TableColumn prefWidth="150" text="Email">
                                        </TableColumn>
                                    </columns>
                                </TableView>
                                <HBox>
                                    <Pane HBox.hgrow="ALWAYS"/>
                                    <JFXButton styleClass="sml-button"
                                               onAction="editContactDialog.show(parentSuppliersPane)">
                                        Add Contact
                                    </JFXButton>
                                </HBox>
                            </content>
                        </TitledPane>

                        <TitledPane text="Items" GridPane.hgrow="ALWAYS"
                                    GridPane.rowIndex="4" GridPane.columnIndex="0"
                                    GridPane.columnSpan="4">
                            <content>
                                <TableView>
                                    <columns>
                                        <TableColumn text="Item No.">
                                        </TableColumn>
                                        <TableColumn text="Item Name">
                                        </TableColumn>
                                        <TableColumn text="Price">
                                        </TableColumn>
                                    </columns>
                                </TableView>
                            </content>
                        </TitledPane>

                        <HBox spacing="20" GridPane.hgrow="ALWAYS"
                              GridPane.rowIndex="5" GridPane.columnIndex="0"
                              GridPane.columnSpan="4">
                            <VBox HBox.hgrow="ALWAYS">
                                <TextField fx:id="editItemSearch" promptText="Item Search"/>
                            </VBox>
                            <JFXButton styleClass="sml-button"
                                       onAction="editItemDialog.show(parentSuppliersPane)">
                                New Item
                            </JFXButton>
                            <VBox HBox.hgrow="ALWAYS">
                                <JFXButton fx:id="editSupplierItemButton" buttonType="FLAT"
                                           alignment="BOTTOM_RIGHT">
                                    <graphic>
                                        <FontIcon iconLiteral="fa-plus" iconSize="20"/>
                                    </graphic>
                                </JFXButton>
                            </VBox>
                        </HBox>

                        <VBox spacing="8" GridPane.hgrow="ALWAYS"
                              GridPane.rowIndex="6" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            <Label>Credit:</Label>
                            <TextField fx:id="editCredit"/>
                        </VBox>

                        <HBox spacing="20"  GridPane.hgrow="ALWAYS"
                              GridPane.rowIndex="7" GridPane.columnIndex="0"
                              GridPane.columnSpan="4">
                            <Pane HBox.hgrow="ALWAYS"/>
                            <JFXButton styleClass="secondary-button" onAction="#onCancelAdd">
                                Cancel
                            </JFXButton>
                            <JFXButton styleClass="action-button" onAction="#onConfirmAdd">
                                Save
                            </JFXButton>
                        </HBox>
                    </GridPane>
                </ScrollPane>

                <ScrollPane styleClass="default-background" fx:id="searchMenu">
                    <VBox spacing="20">
                        <padding>
                            <Insets>
                                <left>20</left>
                                <bottom>20</bottom>
                                <right>20</right>
                                <top>20</top>
                            </Insets>
                        </padding>

                        <VBox HBox.hgrow="ALWAYS">
                            <Label>Keywords</Label>
                            <TextField fx:id="search"/>
                        </VBox>

                        <HBox spacing="16">
                            <VBox spacing="8">
                                <JFXCheckBox fx:id="allSearch" text="All"/>
                            </VBox>
                            <VBox spacing="8">
                                <JFXCheckBox fx:id="stockSearch" text="Stock"/>
                                <JFXCheckBox fx:id="customersSearch" text="Customers"/>
                            </VBox>
                            <VBox spacing="8">
                                <JFXCheckBox fx:id="salesSearch" text="Sales"/>
                                <JFXCheckBox fx:id="suppliersSearch" text="Suppliers"/>
                            </VBox>
                        </HBox>
                        <TitledPane fx:id="filter" text="Filter">
                            <content>

                            </content>
                        </TitledPane>
                        <HBox>
                            <Pane HBox.hgrow="ALWAYS"/>
                            <JFXButton>
                                Search
                            </JFXButton>
                        </HBox>
                    </VBox>
                </ScrollPane>

            </StackPane>



        </sidePane>
        <content>
            <ScrollPane styleClass="default-background" VBox.vgrow="ALWAYS" fitToWidth="true" fitToHeight="true">
                <TableView fx:id="suppliers" styleClass="table-view"/>
            </ScrollPane>
        </content>
        <JFXDialog fx:id="addContactDialog">
            <JFXDialogLayout prefWidth="600">
                <heading>
                    <Label>
                        Add Contact Details
                    </Label>
                </heading>
                <body>
                    <ScrollPane>
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <VBox>
                            <VBox>
                                <Label>Contact Name</Label>
                                <TextField fx:id="addContactName"/>
                            </VBox>
                            <VBox>
                                <Label>Phone</Label>
                                <TextField fx:id="addContactPhone"/>
                            </VBox>
                            <VBox>
                                <Label>Email</Label>
                                <TextField fx:id="addContactEmail"/>
                            </VBox>
                        </VBox>
                    </ScrollPane>

                </body>
                <actions>
                    <JFXButton styleClass="secondary-button" onAction="#cancelContactDialog">Cancel</JFXButton>
                    <JFXButton styleClass="action-button" onAction="#saveContactDialog">Save</JFXButton>
                </actions>
            </JFXDialogLayout>
        </JFXDialog>

        <JFXDialog fx:id="addItemDialog">
            <JFXDialogLayout prefWidth="600">

                <heading>
                    <Label>
                        Add Item
                    </Label>
                </heading>
                <body>
                    <ScrollPane>
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <VBox spacing="20" alignment="CENTER_RIGHT">
                            <HBox spacing="20">
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label>Item No.</Label>
                                    <TextField fx:id="itemNo"/>
                                </VBox>
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label>Item Name</Label>
                                    <TextField fx:id="itemName"/>
                                </VBox>
                            </HBox>
                            <HBox spacing="20">
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label>Model Type</Label>
                                    <ChoiceBox fx:id="modelType" value="Model Type">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="Model Type"/>
                                                <String fx:value="Display"/>
                                                <String fx:value="Static"/>
                                                <String fx:value="Working"/>
                                            </FXCollections>
                                        </items>
                                    </ChoiceBox>
                                </VBox>
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label>Subject Area</Label>
                                    <ChoiceBox fx:id="subjectArea" value="Subject Area" prefWidth="200">
                                        <items>
                                            <FXCollections fx:factory="observableArrayList">
                                                <String fx:value="Subject"/>
                                                <String fx:value="Train"/>
                                                <String fx:value="Boat"/>
                                                <String fx:value="Car"/>
                                                <String fx:value="Airplane"/>
                                                <String fx:value="Other"/>
                                            </FXCollections>
                                        </items>
                                    </ChoiceBox>
                                </VBox>
                            </HBox>
                            <HBox spacing="20">
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label>Mobile</Label>
                                    <TextField fx:id="retailPrice"/>
                                </VBox>
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label>Date First Stocked</Label>
                                    <DatePicker fx:id="dateFirstStocked"/>
                                </VBox>
                            </HBox>
                            <VBox>
                                <Label>Location in Store</Label>
                                <TextField fx:id="locationInStore"/>
                            </VBox>
                            <VBox spacing="5">
                                <Label>Store Stock</Label>
                                <TableView fx:id="storeStockTable" prefHeight="100">
                                    <columns>
                                        <TableColumn prefWidth="300" text="Store Name">
                                        </TableColumn>
                                        <TableColumn text="Quantity">
                                        </TableColumn>
                                    </columns>
                                </TableView>
                            </VBox>
                            <HBox spacing="20">
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label>Store</Label>
                                    <TextField fx:id="itemIDView"/>
                                </VBox>
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label>Quantity</Label>
                                    <TextField fx:id="quantityView"/>
                                </VBox>
                                <VBox alignment="BOTTOM_RIGHT">
                                    <JFXButton fx:id="addItemButton" buttonType="FLAT">
                                        <graphic>
                                            <FontIcon iconLiteral="fa-plus" iconSize="20"/>
                                        </graphic>
                                    </JFXButton>
                                </VBox>
                            </HBox>
                            <VBox>
                                <Label>Description</Label>
                                <TextArea prefHeight="200"></TextArea>
                            </VBox>
                            <TitledPane text="Suppliers">
                                <TableView fx:id="suppliersTable" prefHeight="100">
                                    <columns>
                                        <TableColumn prefWidth="300" text="Supplier Name">
                                        </TableColumn>
                                        <TableColumn text="Price">
                                        </TableColumn>
                                    </columns>
                                </TableView>
                            </TitledPane>

                            <HBox spacing="20">
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label GridPane.columnIndex="0" GridPane.rowIndex="18">Supplier</Label>
                                    <TextField fx:id="supplierSearch" promptText="Search by ID or Name"/>
                                </VBox>
                                <VBox HBox.hgrow="ALWAYS">
                                    <Label>Price/Item</Label>
                                    <TextField fx:id="price"/>
                                </VBox>
                                <VBox alignment="BOTTOM_RIGHT">
                                    <JFXButton fx:id="addSupplierButton" buttonType="FLAT">
                                        <graphic>
                                            <FontIcon iconLiteral="fa-plus" iconSize="20"/>
                                        </graphic>
                                    </JFXButton>
                                </VBox>
                            </HBox>
                            <HBox spacing="20">
                                <VBox HBox.hgrow="ALWAYS">

                                </VBox>
                                <VBox HBox.hgrow="ALWAYS">

                                </VBox>
                            </HBox>
                        </VBox>
                    </ScrollPane>
                </body>
                <actions>
                    <JFXButton styleClass="secondary-button" onAction="#cancelItemDialog">Cancel</JFXButton>
                    <JFXButton styleClass="action-button" onAction="saveItemDialog">Save</JFXButton>
                </actions>
            </JFXDialogLayout>
        </JFXDialog>
    </JFXDrawer>


</StackPane>

