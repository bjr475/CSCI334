<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
      fx:controller="com.app.main.controller.AddressViewController">
    <GridPane VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" vgap="8" hgap="8">
        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.columnIndex="0"
              GridPane.columnSpan="4">
            <Label>Address</Label>
            <TextField fx:id="editAddress"/>
        </VBox>
        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="0"
              GridPane.columnSpan="2">
            <Label>Suburb</Label>
            <TextField fx:id="editSuburb"/>
        </VBox>
        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="2">
            <Label>State</Label>
            <fx:include fx:id="editState" source="address_state.fxml"/>
        </VBox>
        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="3">
            <Label>Postcode</Label>
            <TextField fx:id="editPostcode"/>
        </VBox>
    </GridPane>
</VBox>
