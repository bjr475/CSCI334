<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXDrawer?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.lang.*?>
<StackPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
           fx:controller="com.app.main.controller.employee.CustomersViewController">
    <JFXDrawer fx:id="toolDrawer" direction="RIGHT" VBox.vgrow="ALWAYS">
        <sidePane>
            <StackPane>

                <ScrollPane fx:id="addMenu" styleClass="default-background" HBox.hgrow="ALWAYS" fitToWidth="true">
                    <padding>
                        <Insets>
                            <top>8</top>
                            <bottom>8</bottom>
                            <left>8</left>
                            <right>8</right>
                        </Insets>
                    </padding>
                    <GridPane VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" vgap="8" hgap="8">
                        <Text GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            Add Customer
                        </Text>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            <Label>Email</Label>
                            <TextField fx:id="addEmail"/>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="2"
                              GridPane.columnSpan="2">
                            <Label>Customer ID</Label>
                            <TextField editable="false" fx:id="addCustomerID"/>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            <Label>First Name</Label>
                            <TextField fx:id="addFirstName"/>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.columnIndex="2"
                              GridPane.columnSpan="2">
                            <Label>Last Name</Label>
                            <TextField fx:id="addLastName"/>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.columnIndex="0"
                              GridPane.columnSpan="4" GridPane.rowSpan="2">
                            <fx:include fx:id="addAddress" source="address.fxml"/>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            <CheckBox fx:id="addExistingCredit" text="Existing Credit Line"/>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" GridPane.columnIndex="2"
                              GridPane.columnSpan="2">
                            <CheckBox fx:id="clubMember" text="Club Member"/>
                        </VBox>

                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="6" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            <Label>Credit</Label>
                            <TextField fx:id="addCredit"/>
                        </VBox>

                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="6" GridPane.columnIndex="2"
                              GridPane.columnSpan="2">
                            <Label>Starting Date</Label>
                            <DatePicker fx:id="addClubStartDate" GridPane.hgrow="ALWAYS"/>
                        </VBox>

                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="7" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            <Label>Interests</Label>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="8" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            <Label>Subjects</Label>
                            <ListView fx:id="addSubjects" maxHeight="150">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Train"/>
                                        <String fx:value="Boat"/>
                                        <String fx:value="Car"/>
                                        <String fx:value="Airplane"/>
                                        <String fx:value="Other"/>
                                    </FXCollections>
                                </items>
                            </ListView>
                        </VBox>

                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="8" GridPane.columnIndex="2"
                              GridPane.columnSpan="2">
                            <Label>Model Types</Label>
                            <ListView fx:id="addTypes" maxHeight="150">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Display"/>
                                        <String fx:value="Working"/>
                                        <String fx:value="Static"/>
                                    </FXCollections>
                                </items>
                            </ListView>
                        </VBox>

                        <HBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="10" GridPane.columnIndex="0"
                              GridPane.columnSpan="4">
                            <Pane HBox.hgrow="ALWAYS"/>
                            <JFXButton styleClass="secondary-button" onMouseClicked="#onCancelAdd">Cancel</JFXButton>
                            <JFXButton styleClass="action-button" onMouseClicked="#onConfirmAdd">Confirm</JFXButton>
                        </HBox>
                    </GridPane>
                </ScrollPane>

                <ScrollPane fx:id="editMenu" styleClass="default-background" HBox.hgrow="ALWAYS" fitToWidth="true">
                    <padding>
                        <Insets>
                            <top>8</top>
                            <bottom>8</bottom>
                            <left>8</left>
                            <right>8</right>
                        </Insets>
                    </padding>
                    <GridPane VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" vgap="8" hgap="8">
                        <Text GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            Edit Customer
                        </Text>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            <Label>Email</Label>
                            <TextField fx:id="editEmail"/>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.columnIndex="2"
                              GridPane.columnSpan="2">
                            <Label>Customer ID</Label>
                            <TextField editable="false" fx:id="editCustomerID"/>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            <Label>First Name</Label>
                            <TextField fx:id="editFirstName"/>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.columnIndex="2"
                              GridPane.columnSpan="2">
                            <Label>Last Name</Label>
                            <TextField fx:id="editLastName"/>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="3" GridPane.columnIndex="0"
                              GridPane.columnSpan="4">
                            <fx:include fx:id="editAddress" source="address.fxml"/>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            <Label>Suburb</Label>
                            <TextField fx:id="editSuburb"/>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" GridPane.columnIndex="2">
                            <Label>State</Label>
                            <TextField fx:id="editState"/>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="4" GridPane.columnIndex="3">
                            <Label>Postcode</Label>
                            <TextField fx:id="editPostcode"/>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            <CheckBox fx:id="editExistingCredit" text="Existing Credit Line"/>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" GridPane.columnIndex="2"
                              GridPane.columnSpan="2">
                            <CheckBox fx:id="editClubMember" text="Club Member"/>
                        </VBox>

                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="6" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            <Label>Credit</Label>
                            <TextField fx:id="editCredit"/>
                        </VBox>

                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="6" GridPane.columnIndex="2"
                              GridPane.columnSpan="2">
                            <Label>Starting Date</Label>
                            <DatePicker fx:id="editClubStartDate" GridPane.hgrow="ALWAYS"/>
                        </VBox>

                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="7" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            <Label>Interests</Label>
                        </VBox>
                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="8" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            <Label>Subjects</Label>
                            <ListView fx:id="editSubjects" maxHeight="150">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Train"/>
                                        <String fx:value="Boat"/>
                                        <String fx:value="Car"/>
                                        <String fx:value="Airplane"/>
                                        <String fx:value="Other"/>
                                    </FXCollections>
                                </items>
                            </ListView>
                        </VBox>

                        <VBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="8" GridPane.columnIndex="2"
                              GridPane.columnSpan="2">
                            <Label>Model Types</Label>
                            <ListView fx:id="editTypes" maxHeight="150">
                                <items>
                                    <FXCollections fx:factory="observableArrayList">
                                        <String fx:value="Display"/>
                                        <String fx:value="Working"/>
                                        <String fx:value="Static"/>
                                    </FXCollections>
                                </items>
                            </ListView>
                        </VBox>

                        <HBox GridPane.hgrow="ALWAYS" GridPane.rowIndex="10" GridPane.columnIndex="0"
                              GridPane.columnSpan="4">
                            <Pane HBox.hgrow="ALWAYS"/>
                            <JFXButton styleClass="secondary-button">Cancel</JFXButton>
                            <JFXButton styleClass="action-button" onMouseClicked="#onConfirmAdd">Confirm</JFXButton>
                        </HBox>
                    </GridPane>
                </ScrollPane>

                <ScrollPane styleClass="default-background" fx:id="searchMenu">
                    <VBox spacing="20">
                        <padding>
                            <Insets>
                                <left>20</left>
                                <bottom>20</bottom>
                                <right>20</right>
                                <top>20</top>
                            </Insets>
                        </padding>

                        <VBox HBox.hgrow="ALWAYS">
                            <Label>Keywords</Label>
                            <TextField fx:id="search"/>
                        </VBox>

                        <HBox spacing="16">
                            <VBox spacing="8">
                                <JFXCheckBox fx:id="allSearch" text="All"/>
                            </VBox>
                            <VBox spacing="8">
                                <JFXCheckBox fx:id="stockSearch" text="Stock"/>
                                <JFXCheckBox fx:id="customersSearch" text="Customers"/>
                            </VBox>
                            <VBox spacing="8">
                                <JFXCheckBox fx:id="salesSearch" text="Sales"/>
                                <JFXCheckBox fx:id="suppliersSearch" text="Suppliers"/>
                            </VBox>
                        </HBox>
                        <TitledPane fx:id="filter" text="Filter">
                            <content>

                            </content>
                        </TitledPane>
                        <HBox>
                            <Pane HBox.hgrow="ALWAYS"/>
                            <JFXButton>
                                Search
                            </JFXButton>
                        </HBox>
                    </VBox>
                </ScrollPane>

            </StackPane>
        </sidePane>
        <content>
            <TableView fx:id="customersTable" styleClass="table-view">
                <columns>
                    <TableColumn prefWidth="100" text="Customer No.">
                    </TableColumn>
                    <TableColumn prefWidth="300" text="Email">
                    </TableColumn>
                    <TableColumn prefWidth="150" text="First Name">
                    </TableColumn>
                    <TableColumn prefWidth="150" text="Last Name">
                    </TableColumn>
                    <TableColumn prefWidth="300" text="Address">
                    </TableColumn>
                    <TableColumn prefWidth="170" text="Suburb">
                    </TableColumn>
                    <TableColumn prefWidth="50" text="State">
                    </TableColumn>
                    <TableColumn prefWidth="100" text="Postcode">
                    </TableColumn>
                    <TableColumn prefWidth="100" text="Credit Line">
                    </TableColumn>
                    <TableColumn prefWidth="100" text="Club Member">
                    </TableColumn>
                </columns>
            </TableView>
        </content>
    </JFXDrawer>
</StackPane>
