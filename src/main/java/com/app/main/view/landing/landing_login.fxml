<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<GridPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
          fx:controller="com.app.main.controller.landing.LandingLoginViewController"
          alignment="center" hgap="25" vgap="25">
    <padding>
        <Insets>
            <left>20</left>
            <right>20</right>
        </Insets>
    </padding>
    <Label GridPane.columnIndex="0" GridPane.rowIndex="1">
        <graphic>
            <FontIcon iconLiteral="fa-user" iconSize="20"/>
        </graphic>
    </Label>
    <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label GridPane.columnIndex="0" GridPane.rowIndex="2">
        <graphic>
            <FontIcon iconLiteral="fa-lock" iconSize="20"/>
        </graphic>
    </Label>
    <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <VBox spacing="24" alignment="center" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <JFXButton alignment="CENTER" onAction="#onLogin" styleClass="action-button">
            Login
        </JFXButton>

        <JFXButton alignment="CENTER" onAction="#onForgot" styleClass="dark-link">
            Forgot Password
        </JFXButton>
    </VBox>
    <Text fx:id="messageDisplay" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
</GridPane>


