<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
      fx:controller="com.app.main.controller.AddressViewController"
      spacing="10">
    <VBox>
        <Label>Address</Label>
        <TextField fx:id="addressLine"/>
    </VBox>
    <HBox spacing="8">
        <VBox HBox.hgrow="ALWAYS">
            <Label>Suburb</Label>
            <TextField fx:id="suburb"/>
        </VBox>
        <VBox>
            <Label>State</Label>
            <fx:include fx:id="state" source="address_state.fxml"/>
        </VBox>
        <VBox HBox.hgrow="ALWAYS">
            <Label>Postcode</Label>
            <TextField fx:id="postcode"/>
        </VBox>
    </HBox>
</VBox>
